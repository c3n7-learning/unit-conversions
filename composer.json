{
    "name": "c3n7-learning/unit-conversions",
    "description": "This is my package for unit conversions",
    "keywords": [
        "c3n7-learning",
        "unit-conversions"
    ],
    "homepage": "https://github.com/c3n7-learning/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Timothy Karani",
            "email": "kartimothy@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "C3N7Learning\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "C3N7Learning\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
